<p id="notice"><%= notice %></p>

<p>
  <strong>First name:</strong>
  <%= @person.first_name %>
</p>

<p>
  <strong>Last name:</strong>
  <%= @person.last_name %>
</p>

<ul>
  <% @person.phone_numbers.each do |number| %>
    <li class="phone-number"><%= number.number %>
      <%= link_to('edit', edit_phone_number_path(number)) %>
      <%= link_to('delete', phone_number_path(number), method: 'delete') %>
    </li>
  <% end %>
</ul>

<ul>
  <% @person.email_addresses.each do |email| %>
    <li class="email-address"><%= email.address %>
      <%= link_to('edit', edit_email_address_path(email)) %>
    </li>
  <% end %>
</ul>

<%= link_to 'Add new phone number', new_phone_number_path(person_id: @person.id) %> |
<%= link_to 'Add new email address', new_email_address_path(person_id: @person.id) %> |
<%= link_to 'Edit', edit_person_path(@person) %> |
<%= link_to 'Back', people_path %>
