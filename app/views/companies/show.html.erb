<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @company.name %>
</p>

<ul>
  <% @company.phone_numbers.each do |number| %>
    <li class="phone-number"><%= number.number %>
      <%= link_to('edit', edit_phone_number_path(number)) %>
      <%= link_to('delete', phone_number_path(number), method: 'delete') %>
    </li>
  <% end %>
</ul>

<%= link_to 'Add new phone number', new_phone_number_path(contact_id: @company.id, contact_type: 'Company') %> |
<%= link_to 'Edit', edit_company_path(@company) %> |
<%= link_to 'Back', companies_path %>
