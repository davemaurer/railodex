<div class="company">
  <h1>
    <%= @company.name %>
  </h1>

  <ul>
    <%= render 'phone_numbers/phone_numbers', phone_numbers: @company.phone_numbers %>
  </ul>

  <ul>
    <%= render 'email_addresses/email_addresses', email_addresses: @company.email_addresses %>
  </ul>

  <ul class="actions">
    <li><%= link_to 'Add new phone number', new_phone_number_path(contact_id: @company.id, contact_type: 'Company') %></li>
    <li><%= link_to 'Add new email address', new_email_address_path(contact_id: @company.id, contact_type: 'Company') %></li>
    <li><%= link_to 'Edit', edit_company_path(@company) %></li>
    <li><%= link_to 'Back', companies_path %></li>
  </ul>
</div>
