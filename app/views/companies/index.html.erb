<h1>Companies</h1>

<h3><%= link_to 'New Company', new_company_path, id: 'new_company' %></h3>
<h3><%= link_to 'Back to Main Page', root_path %></h3>

<table>
  <tbody>
  <% @companies.each do |company| %>
    <tr>
      <td><%= company.name %></td>
      <td>
        <ul class="actions">
          <li><%= link_to 'Show', company %></li>
          <li><%= link_to 'Edit', edit_company_path(company) %></li>
          <li><%= link_to 'Destroy', company, method: :delete, data: { confirm: 'Are you sure?' } %></li>
        </ul>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

