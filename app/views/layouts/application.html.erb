<!DOCTYPE html>
<html>
  <head>
    <title>Railodex</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
  <% flash.each do |name, msg| %>
    <%= content_tag :div, msg, class: "alert alert-info" %>
  <% end %>

  <div id="account">
    <%= link_to 'Login', login_path, id: 'login' %>
  </div>

    <%= yield %>
  </body>
</html>
